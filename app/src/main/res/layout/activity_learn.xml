                android:layout_marginStart="18dp"
                android:textSize="15sp"
                android:text="In this section you can make your TO-DO list for your personal use,When you will complete your TO-DO you just have to mark that."/>

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_light"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:text="7. Timeline" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="18dp"
                android:textSize="15sp"
                android:text="This section will carry the information about the things done in the classroom set by the teachers."/>

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_light"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:text="8. Exams" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="30dp"
                android:textSize="15sp"
                android:text="This section will carry the information about the Exams and question paper pdf."/>

        </LinearLayout>
    </ScrollView>

